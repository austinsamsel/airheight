---
layout: layout_blog
pageable: true
per_page: 10
---

<!-- <span class="section-title blog-title">Blog</span> -->

<% if paginate && num_pages > 1 %>
  <p>Page <%= page_number %> of <%= num_pages %></p>

  <% if prev_page %>
    <p><%= link_to 'Previous page', prev_page %></p>
  <% end %>
<% end %>

<div id="blog-index">
  <% page_articles.each_with_index do |article, i| %>
    <div class="blog-item">
      <!-- <h5><%= article.date.strftime('%b %e') %></h5>
      <h1><%= link_to article.title, article %></h1> -->
      <%= article.summary %>
      <div class="read-more-container">
        <a href="<%= article.url %>"><button class="read-more-button read-more-link"> <!--<i class="fa fa-link"></i>--> Read it</button> </a>
      </div>
    </div>
  <% end %>
</div>

<% if paginate %>
  <% if next_page %>
    <p><%= link_to 'Next page', next_page %></p>
  <% end %>
<% end %>
