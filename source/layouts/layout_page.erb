<!doctype html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv='X-UA-Compatible' content='IE=edge;chrome=1' />
    <title>High Tops <%= ' - ' + current_page.data.title unless current_page.nil? %></title>
    <%= feed_tag :atom, "#{blog.options.prefix.to_s}/feed.xml", title: "Atom Feed" %>
    <%= stylesheet_link_tag "blog" %>
    <link href='http://fonts.googleapis.com/css?family=Oxygen:400,300,700'
  rel='stylesheet' type='text/css'>
    <%= javascript_include_tag "all", "layout_blog" %>
  </head>
  <body>
    <%= partial "partials/nav" %>
    
    <div id="blog-content" role="main">
     <h1><%= current_page.data.title unless current_page.nil? %></h1>
      <%= yield %>
    </div>
    
    
    <%= google_analytics_tag %>
  </body>
</html>
